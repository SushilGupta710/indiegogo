<body>
    <!-- Modal HTML -->
    <div id="register" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-login"  role="document">
            <div class="modal-content  px-5">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Welcome back!</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="text-center">
                    <p>Sign up to join Indiegogo.</p>
                </div>
                <div class="modal-body">
                    <form action="/examples/actions/confirmation.php" method="post">
                        <div class="form-group">
                            <label for="">First Name</label>
                            <input type="text" class="form-control" placeholder="Your First Name" required="required">
                        </div>
                        <div class="form-group">
                            <label for="">Last Name</label>
                            <input type="text" class="form-control" placeholder="Your Last Name" required="required">
                        </div>
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="text" class="form-control" placeholder="Your Email" required="required">
                        </div>
                        <div class="form-group">
                            <label for="">Password</label>
                            <input type="password" class="form-control" placeholder="Your Password" required="required">
                        </div>
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Sign me up for the Indiegogo
                                newsletter</label>
                        </div>
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">
                                I agree to the Terms of Use and have read and understand the Privacy Policy</label>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" class="btn btn-block" value="CREATE ACCOUNT">
                        </div>
                        <div class="text-center text-secondary">
                            <h6>OR</h6>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-block" id="facebook"><i
                                    class="fab fa-facebook-square"></i>CONTINUE WITH FACEBOOK</button>
                        </div>
                        <div class="text-center">
                            No posts without your permission.
                        </div>
                        <div class="text-center text-dark mt-3">
                            <h6>New to Indiegogo?<a href="#" class="text-dark"><ins>Log in</ins></a> </h6>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>

</html>